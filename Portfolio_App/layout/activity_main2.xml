<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/archivo_black"
        android:text="Sakshi Kadam"
        android:textAlignment="center"
        android:textColor="#100F0F"
        android:textSize="33sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Agile SD Intern | Student | Tech Enthusiast"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Experience"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Skills"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Education"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Projects"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Let's Connect!!"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Name:"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="enter first and last name"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Gmail:"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="enter your email id"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:textOff="Unsave Information"
            android:textOn="Save Information " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img1"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/github"
            android:onClick="github"
            android:contentDescription="GitHub"/>

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/linkedin"
            android:onClick="linkedin"
            android:contentDescription="LinkedIn"/>

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="68dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/gmail"
            android:onClick="gmail"
            android:contentDescription="Gmail"/>

        <ImageButton
            android:id="@+id/img4"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/instagram"
            android:onClick="insta"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Instagram"/>
    </LinearLayout>
</LinearLayout>